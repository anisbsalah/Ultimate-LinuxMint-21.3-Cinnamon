[Nemo Action]
# A desktop context menu item to gracefully close all open application
# windows in the current workspace
# Requires wmctrl (apt install wmctrl) and xdotool (apt install xdotool).
Name=Close All Windows In _Workspace
Comment=Close all windows in current workspace
Exec=<action_scripts/close_windows.sh workspace>
Selection=None
Extensions=any;
Icon-Name=application-exit-symbolic
Dependencies=wmctrl;xdotool;
Conditions=desktop;
