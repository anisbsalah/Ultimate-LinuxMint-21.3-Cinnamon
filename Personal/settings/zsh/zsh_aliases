### Personal aliases

###
alias ls='exa --icons --group-directories-first'
alias md='mkdir -p'
alias swap='swapon --show'

### Adding flags
alias bat='bat --color=always --style=plain --pager=never'
alias df='df -h'
alias free='free -h'
alias ip='ip -c'

### APT package manager
alias install='sudo apt install'
alias remove='sudo apt purge'
alias search='apt search'

### Edit files with nano
alias nbashrc='nano ~/.bashrc'
alias nfishrc='nano ~/.config/fish/config.fish'
alias nfstab='sudo nano /etc/fstab'
alias ngrub='sudo nano /etc/default/grub'
alias nzshrc='nano ~/.config/zsh/.zshrc'

### Git
alias grh='git reset --hard'
alias gcl='git clone'

### lf terminal filemanager
alias lfi='lfimg'
alias lfr='lfrun'
alias lfu='lfub'

### Source config files
alias srcb='source ~/.bashrc'
alias srcf='source ~/.config/fish/config.fish'
alias srcz='source ~/.config/zsh/.zshrc'

### Switch between shells
alias tobash='sudo chsh -s "$(which bash)" "${USER}" && echo -e "Changing your shell to bash...\nLog out and log back in again to use your new default shell."'
alias tofish='sudo chsh -s "$(which fish)" "${USER}" && echo -e "Changing your shell to fish...\nLog out and log back in again to use your new default shell."'
alias tozsh='sudo chsh -s "$(which zsh)" "${USER}" && echo -e "Changing your shell to zsh...\nLog out and log back in again to use your new default shell."'

### Systemctl
alias sy-enable='sudo systemctl enable'
alias sy-disable='sudo systemctl disable'
alias sy-start='sudo systemctl start'
alias sy-restart='sudo systemctl restart'
alias sy-stop='sudo systemctl stop'
alias sy-status='systemctl status'

### System management
alias rb='systemctl reboot'
alias sd='systemctl poweroff'

### Update
alias ug='sudo grub-mkconfig -o /boot/grub/grub.cfg'
alias upall='sudo apt update && sudo apt upgrade -y && flatpak update -y'
alias update='sudo apt update && sudo apt upgrade -y'
